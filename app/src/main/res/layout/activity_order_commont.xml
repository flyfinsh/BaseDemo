<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:wheel="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/login_btn_pink">
        <RelativeLayout
            android:id="@+id/order_commont_title_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iamge"
                android:layout_centerInParent="true"
                android:layout_width="16dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/navigation_back"/>
            <TextView
                android:layout_centerVertical="true"
                android:text="返回"
                android:layout_toRightOf="@id/iamge"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:textSize="15sp"
            android:id="@+id/order_commont_title_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text=""/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/order_commont_title_pop"
            android:layout_toRightOf="@id/order_commont_title_name"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/order_upp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/order_commont_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/order_commont_date_rg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/goods_title"
            android:background="@color/tab_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RadioButton
                android:text="@string/buyer_handler_1"
                android:textSize="14sp"
                android:checked="true"
                android:id="@+id/order_commont_date_rg_1"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:button="@null"
                android:textColor="@drawable/custom_button_selector"
                android:background="@drawable/custom_button_bg_selector"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="45dp"/>
            <RadioButton
                android:text="@string/buyer_handler_2"
                android:textSize="14sp"
                android:id="@+id/order_commont_date_rg_2"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:button="@null"
                android:textColor="@drawable/custom_button_selector"
                android:background="@drawable/custom_button_bg_selector"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="45dp"/>
            <RadioButton
                android:text="@string/buyer_handler_3"
                android:textSize="14sp"
                android:id="@+id/order_commont_date_rg_3"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:button="@null"
                android:textColor="@drawable/custom_button_selector"
                android:background="@drawable/custom_button_bg_selector"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="45dp"/>
            <RadioButton
                android:text="@string/buyer_handler_4"
                android:textSize="14sp"
                android:id="@+id/order_commont_date_rg_4"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:button="@null"
                android:textColor="@drawable/custom_button_selector"
                android:background="@drawable/custom_button_bg_selector"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="45dp"/>
        </RadioGroup>


    </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/load_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/load_fail" />

                <Button
                    android:id="@+id/error_btn_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/bg_solid_pink"
                    android:text="@string/home_fragment_loading_error"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/load_empty"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/load_empty" />
                <TextView
                    android:text="订单列表为空..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/load_loading"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--<ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateDrawable="@drawable/layerlist_pb_big"
                    android:layout_centerInParent="true"
                    android:indeterminateBehavior="repeat" />-->
                <com.pnikosis.materialishprogress.ProgressWheel
                    android:visibility="visible"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    wheel:matProg_barColor="@color/login_btn_pink"
                    wheel:matProg_progressIndeterminate="true"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/load_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.cjj.MaterialRefreshLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/order_commont_refresh"
                        android:orientation="vertical"
                        app:overlay="true"
                        app:isLoadMore="true"
                        app:wave_color="@android:color/transparent"
                        app:wave_show="true"
                        >
                        <com.meilicat.basedemo.view.AnimatedExpandableListView
                            android:id="@+id/order_commont_lv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="#EEEEEE">
                        </com.meilicat.basedemo.view.AnimatedExpandableListView>
                     </com.cjj.MaterialRefreshLayout>
                </LinearLayout>
        </FrameLayout>



</LinearLayout>
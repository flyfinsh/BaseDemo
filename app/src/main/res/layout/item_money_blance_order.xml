<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_name"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="白色小短裙 货号：3333 白色 M"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_date"
            android:text="02-11"
            android:textSize="11sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_item_text_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/order_money"
            android:textColor="@color/login_btn_pink"
            android:textSize="14sp"

            android:text="+18500.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/order_money"
            android:id="@+id/order_blance"
            android:textSize="12sp"
            android:text="余额：31200.00"
            android:textColor="@color/gray_item_text_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>
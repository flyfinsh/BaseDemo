<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_parent_perfectly"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/item_lefticon_perfectly"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/item_tvLeft_perfectly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_lefticon_perfectly"
        android:layout_marginLeft="12dp"
        android:textColor="@color/item_dark_color"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_right_iv_perfectly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/icon_arrow" />

    <TextView
        android:id="@+id/item_tvRight_perfectly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/item_right_iv_perfectly"
        android:textColor="@color/tab_gray_color"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>

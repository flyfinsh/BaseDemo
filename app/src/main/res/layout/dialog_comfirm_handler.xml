<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="237dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="33">
            <TextView
                android:textSize="14sp"
                android:layout_gravity="center"
                android:text="签收确认"
                android:gravity="center"
                android:textColor="@color/login_btn_pink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line"/>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="0dip"
           android:layout_weight="173">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="0dip"
               android:layout_weight="10"
               android:layout_height="match_parent">
               <TextView
                   android:text="仓位："
                   android:textSize="13sp"
                   android:textColor="@color/gray_item_text_n"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:layout_gravity="right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textSize="13sp"
                   android:text="数量："
                   android:textColor="@color/gray_item_text_n"
                   android:paddingTop="4dp"
                   android:layout_gravity="right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textSize="13sp"
                   android:text="剩余备货时间："
                   android:textColor="@color/gray_item_text_n"
                   android:layout_marginTop="9dp"
                   android:layout_gravity="right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:text="签收备注："
                   android:textColor="@color/gray_item_text_n"
                   android:textSize="13sp"
                   android:layout_marginTop="9dp"
                   android:layout_gravity="right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="0dip"
               android:layout_weight="19"
               android:layout_height="match_parent">
               <TextView
                   android:text="A"
                   android:textColor="@color/black"
                   android:paddingBottom="8dp"
                   android:textSize="13sp"
                   android:paddingTop="8dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:layout_marginRight="15dp"
                   android:maxLines="1"
                   android:textColor="@color/black"
                   android:maxLength="10"
                   android:paddingLeft="3dp"
                   android:inputType="number"
                   android:textSize="13sp"
                   android:paddingTop="3dp"
                   android:paddingBottom="3dp"
                   android:background="@drawable/custom_edittext_bg_selector"
                   android:id="@+id/dialog_comfirm_number"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_marginRight="15dp"
                   android:layout_marginTop="5dp"
                   android:paddingBottom="4dp"
                   android:textSize="13sp"
                   android:maxLines="1"
                   android:text=""
                   android:paddingLeft="4dp"
                   android:paddingTop="4dp"
                   android:textColor="@color/black"
                   android:background="@drawable/custom_edittext_bg_selector"
                   android:id="@+id/dialog_comfirm_time"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <EditText
                   android:layout_marginRight="15dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="10dp"
                   android:paddingLeft="4dp"
                   android:paddingTop="4dp"
                   android:maxLength="100"
                   android:lines="5"
                   android:textColor="@color/black"
                   android:gravity="top|left"
                   android:maxLines="5"
                   android:textSize="13sp"
                   android:background="@drawable/custom_edittext_bg_selector"
                   android:id="@+id/dialog_comfirm_info"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="32"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_comfirm_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_cancel_text"
                android:textColor="@color/gray_item_text_n"
                android:textStyle="bold"
                android:textSize="14dp" />

            <View
                android:id="@+id/check_version_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line"
                />
            <TextView
                android:id="@+id/dialog_comfirm_comfirm"
                android:background="@color/login_btn_pink"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_confirm_text"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
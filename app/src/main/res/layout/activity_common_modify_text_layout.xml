<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:background="@color/app_common_bg">

    <include layout="@layout/navigation_bar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <com.meilicat.basedemo.view.ClearEditText
            android:id="@+id/account_modify_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/item_dark_color"
            android:textColorHint="@color/tab_gray_color"
            android:textSize="15dp"/>

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="你确定将商品标记为："
            android:gravity="left|center_vertical"
            android:textColor="@color/login_btn_pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/no_product_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="暂不生产？"
            android:textStyle="bold"
            android:textColor="@color/blue_for_camera_text"
            android:textSize="15dp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_product_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_cancel_text"
            android:textColor="@color/item_dark_color"
            android:textStyle="bold"
            android:textSize="15dp" />

        <View
            android:id="@+id/check_version_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line"
            />

        <TextView
            android:id="@+id/no_product_comfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_confirm_text"
            android:textColor="@color/item_dark_color"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>